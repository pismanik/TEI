     <choice>
      <reg>
       характер
      </reg>
      <orig>
       характеръ
      </orig>
     </choice>
     <name placement="text" ref="13844" type="person">
      Сони
     </name>
     .
     <choice>
      <reg>
       Эгоизм
      </reg>
      <orig>
       Эгоизмъ
      </orig>
     </choice>
     ,
     <choice>
      <reg>
       исключающий
      </reg>
      <orig>
       исключающій
      </orig>
     </choice>
     все, что не я,
     <choice>
      <reg>
       доходящий
      </reg>
      <orig>
       доходящій
      </orig>
     </choice>

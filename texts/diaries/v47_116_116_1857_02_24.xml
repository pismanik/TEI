       <choice>
        <reg>
         Тургенев
        </reg>
        <orig>
         Тургеневъ
        </orig>
       </choice>
      </corr>
     </choice>
     и я
     <choice>
      <reg>
       поехал
      </reg>
      <orig>
       поѣхалъ
      </orig>
     </choice>
     <choice>
      <reg>

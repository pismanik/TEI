     <hi style="opdelimiter">
      благодаря,
     </hi>
     <pb n="175"/>
     <hi style="npdelimiter">
      вспоминая
     </hi>
     <choice>
      <reg>
       все
      </reg>
      <orig>
       всѣ
      </orig>
     </choice>

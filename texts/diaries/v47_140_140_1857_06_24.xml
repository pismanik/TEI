     <choice>
      <reg>
       свояк
      </reg>
      <orig>
       своякъ
      </orig>
     </choice>
     <hi>
      Графа
      <gap quantity="1" reason="illegible" unit="word"/>
      .
     </hi>
     <choice>
      <reg>
       Походил
      </reg>
      <orig>
       Походилъ
      </orig>
     </choice>
     . Тяжесть
     <choice>
      <reg>
       в
      </reg>
      <orig>
       въ
      </orig>
     </choice>
     <choice>
      <reg>
       ногах
      </reg>
      <orig>
       ногахъ
      </orig>

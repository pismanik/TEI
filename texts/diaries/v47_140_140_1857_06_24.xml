     <hi>
      мы
     </hi>
     <choice>
      <reg>
       вместе
      </reg>
      <orig>
       вмѣстѣ
      </orig>
     </choice>
     <ref target="#note295">
      295
     </ref>
     <note exclude="true" index="false" resp="volume_editor" xml:id="note295">
      <hi>

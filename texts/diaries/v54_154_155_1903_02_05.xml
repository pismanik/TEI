     <choice>
      <reg>
       человека
      </reg>
      <orig>
       человѣка
      </orig>
     </choice>
     .
     <choice original_editorial_correction="Сознан[iе]">
      <sic>
       Сознан
      </sic>
      <corr>
       <choice>
        <reg>
         Сознание
        </reg>
        <orig>
         Сознаніе
        </orig>

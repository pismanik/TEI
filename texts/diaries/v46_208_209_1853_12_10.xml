     <choice>
      <reg>
       Іосиф
      </reg>
      <orig>
       Іосифъ
      </orig>
     </choice>
     ,
     <choice>
      <reg>
       бывший
      </reg>
      <orig>
       бывшій
      </orig>
     </choice>
     король
     <choice>
      <reg>
       Неаполитанский
      </reg>
      <orig>
       Неаполитанскій
      </orig>
     </choice>
     и
     <choice>
      <reg>
       Испанский
      </reg>
      <orig>
       Испанскій
      </orig>
     </choice>

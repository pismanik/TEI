      <orig>
       уѣхалъ
      </orig>
     </choice>
     <choice>
      <reg>
       верхом
      </reg>
      <orig>
       верхомъ
      </orig>
     </choice>
     <choice>
      <reg>
       к
      </reg>
      <orig>
       къ
      </orig>
     </choice>
     <choice>
      <reg>
       <name placement="text" ref="3743" type="person">
        Горчаковым
       </name>
      </reg>
      <orig>
       Горчаковымъ
      </orig>
     </choice>
     и
     <choice>
      <reg>
       просидел
      </reg>
      <orig>
       просидѣлъ
      </orig>
     </choice>
     за шахматами
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>
     <choice original_editorial_correction="Золот[аревымъ]">

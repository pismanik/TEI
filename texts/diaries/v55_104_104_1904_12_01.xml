     <choice>
      <reg>
       Кругом
      </reg>
      <orig>
       Кругомъ
      </orig>
     </choice>
     <choice original_editorial_correction="Ч[тенiя]">
      <sic>
       Ч
      </sic>
      <corr>
       <choice>
        <reg>
         Чтения
        </reg>
        <orig>
         Чтенія
        </orig>
       </choice>
      </corr>
     </choice>
     .
     <choice>
      <reg>

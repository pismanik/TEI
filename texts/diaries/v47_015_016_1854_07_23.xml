     <choice>
      <reg>
       способным
      </reg>
      <orig>
       способнымъ
      </orig>
     </choice>
     <choice>
      <reg>
       к
      </reg>
      <orig>
       къ
      </orig>
     </choice>
     <choice>
      <reg>
       общежитию
      </reg>

    <p id="202dd2ab-f961-4b09-807b-9063b13b5eb0">
     <choice>
      <reg>
       Утром
      </reg>
      <orig>
       Утромъ
      </orig>
     </choice>
     <choice>
      <reg>
       написал
      </reg>
      <orig>
       написалъ
      </orig>

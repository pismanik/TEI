     <choice>
      <reg>
       от
      </reg>
      <orig>
       отъ
      </orig>
     </choice>
     этого
     <choice>
      <reg>
       желания
      </reg>
      <orig>
       желанія
      </orig>
     </choice>
     .
     <choice>
      <reg>
       Вечером
      </reg>
      <orig>
       Вечеромъ
      </orig>
     </choice>

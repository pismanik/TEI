     <choice>
      <reg>
       прогнал
      </reg>
      <orig>
       прогналъ
      </orig>
     </choice>
     <choice>
      <reg>
       Рогазинского
      </reg>
      <orig>
       Рогазинскаго
      </orig>
     </choice>
     .
     <choice>
      <reg>
       Читал
      </reg>
      <orig>
       Читалъ
      </orig>

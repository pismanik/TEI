     <choice>
      <reg>
       кончил
      </reg>
      <orig>
       кончилъ
      </orig>
     </choice>
     <choice>
      <reg>
       Послесловие
      </reg>
      <orig>
       Послѣсловіе
      </orig>
     </choice>

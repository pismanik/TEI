       <orig>
        въ
       </orig>
      </choice>
      будущее, при
      <choice>
       <reg>
        чем
       </reg>
       <orig>
        чемъ
       </orig>
      </choice>
      бывшее
      <choice>
       <reg>
        настоящим
       </reg>
       <orig>
        настоящимъ
       </orig>
      </choice>
      <choice>
       <reg>
        в
       </reg>
       <orig>
        въ
       </orig>
      </choice>

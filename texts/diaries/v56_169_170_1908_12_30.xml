     <choice>
      <reg>
       сознании
      </reg>
      <orig>
       сознаніи
      </orig>
     </choice>
     <choice>
      <reg>
       непрестанного
      </reg>
      <orig>
       непрестаннаго
      </orig>
     </choice>
     перехода
     <choice>
      <reg>

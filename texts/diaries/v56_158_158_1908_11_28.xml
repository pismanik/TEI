     </choice>
     <choice>
      <reg>
       им
      </reg>
      <orig>
       имъ
      </orig>
     </choice>
     <choice original_editorial_correction="Кр[угъ]">
      <sic>
       Кр
      </sic>
      <corr>
       <choice>
        <reg>
         Круг
        </reg>
        <orig>
         Кругъ
        </orig>
       </choice>
      </corr>
     </choice>
     <choice original_editorial_correction="Чт[енiя]">
      <sic>
       Чт
      </sic>
      <corr>
       <choice>
        <reg>
         Чтения
        </reg>
        <orig>
         Чтенія
        </orig>
       </choice>
      </corr>
     </choice>
     и
     <choice>
      <reg>
       говорил
      </reg>
      <orig>
       говорилъ
      </orig>
     </choice>
     . И
     <choice>
      <reg>
       рад
      </reg>
      <orig>
       радъ
      </orig>
     </choice>
     этому. Эта чета
     <choice original_editorial_correction="М[иши]">
      <sic>
       М
      </sic>
      <corr>
       <name placement="text" ref="13886" type="person">
        Миши
       </name>
      </corr>
     </choice>
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>

       <choice>
        <reg>
         железных
        </reg>
        <orig>
         желѣзныхъ
        </orig>
       </choice>
      </corr>
     </choice>
     <choice>
      <reg>
       дорог
      </reg>
      <orig>
       дорогъ
      </orig>
     </choice>

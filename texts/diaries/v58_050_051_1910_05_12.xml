     <choice>
      <reg>
       цивилизацией
      </reg>
      <orig>
       цивилизаціей
      </orig>
     </choice>
     и
     <choice>
      <reg>
       отдельными
      </reg>
      <orig>
       отдѣльными
      </orig>
     </choice>

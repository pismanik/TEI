     <choice>
      <reg>
       <name placement="text" ref="178" type="person">
        Федор
       </name>
      </reg>
      <orig>
       Федоръ
      </orig>
     </choice>
     и
     <name placement="text" ref="12308" type="person">
      Сашка
     </name>

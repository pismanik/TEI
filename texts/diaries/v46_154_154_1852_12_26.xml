     <choice>
      <reg>
       свободен
      </reg>
      <orig>
       свободенъ
      </orig>
     </choice>
     ! Ничего не
     <choice>
      <reg>
       писал
      </reg>
      <orig>
       писалъ
      </orig>
     </choice>
     ; но завтра начну
     <choice>
      <reg>
       непременно
      </reg>
      <orig>
       непремѣнно
      </orig>
     </choice>
     .
     <choice>
      <reg>
       Встретил
      </reg>
      <orig>
       Встрѣтилъ
      </orig>
     </choice>
     поздно обнявшегося казака
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>
     козачками и
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>
     <choice>
      <reg>
       удовольствием
      </reg>
      <orig>
       удовольствіемъ
      </orig>
     </choice>
     <choice>
      <reg>
       вспомнил
      </reg>
      <orig>
       вспомнилъ
      </orig>
     </choice>
     о
     <choice>
      <reg>
       кутежах
      </reg>
      <orig>
       кутежахъ
      </orig>
     </choice>
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>

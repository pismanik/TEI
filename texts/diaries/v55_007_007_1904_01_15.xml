     <choice>
      <reg>
       обобщение
      </reg>
      <orig>
       обобщеніе
      </orig>
     </choice>
     ,
     <choice>
      <reg>
       вдохновение
      </reg>
      <orig>
       вдохновеніе
      </orig>
     </choice>
     —
     <choice>
      <reg>
       религиозное
      </reg>
      <orig>
       религіозное
      </orig>
     </choice>
     <choice>
      <reg>
       сознание
      </reg>
      <orig>
       сознаніе
      </orig>
     </choice>

     <choice original_editorial_correction="вымер[ло]">
      <sic>
       вымер
      </sic>
      <corr>
       вымерло
      </corr>
     </choice>
     <choice>
      <reg>
       целое
      </reg>
      <orig>
       цѣлое
      </orig>
     </choice>
     <choice>
      <reg>
       поколение
      </reg>
      <orig>
       поколѣніе
      </orig>
     </choice>

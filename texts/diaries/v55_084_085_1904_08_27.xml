     <choice original_editorial_correction="п[отому]">
      <sic>
       п
      </sic>
      <corr>
       потому
      </corr>
     </choice>
     ,
     <choice original_editorial_correction="ч[то]">
      <sic>
       ч
      </sic>
      <corr>
       что
      </corr>
     </choice>
     это
     <choice>
      <reg>
       бесконечно
      </reg>
      <orig>
       безконечно
      </orig>
     </choice>
     большая,
     <choice original_editorial_correction="замыкающая[ся]">
      <sic>
       замыкающая
      </sic>
      <corr>
       замыкающаяся
      </corr>
     </choice>
     кривая, или это — прямая,
     <ref target="#note384">
      384
     </ref>
     <note exclude="true" index="false" resp="volume_editor" xml:id="note384">
      <hi>
       Зачеркнуто:
      </hi>
      безконечна
     </note>
     <choice original_editorial_correction="к[оторая]">
      <sic>
       к
      </sic>
      <corr>
       которая
      </corr>
     </choice>
     для меня,
     <choice>
      <reg>
       как
      </reg>
      <orig>
       какъ
      </orig>
     </choice>
     <choice>
      <reg>
       бесконечная
      </reg>
      <orig>
       безконечная
      </orig>
     </choice>
     , не
     <choice>
      <reg>
       имеет
      </reg>
      <orig>
       имѣетъ
      </orig>
     </choice>
     смысла, но
     <ref target="#note385">
      385
     </ref>
     <note exclude="true" index="false" resp="volume_editor" xml:id="note385">
      <hi>
       Зачеркнуто:
      </hi>
      <choice original_editorial_correction="раз[умна]">
       <sic>
        раз
       </sic>
       <corr>
        разумна

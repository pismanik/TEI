     <choice original_editorial_correction="к[оторая]">
      <sic>
       к
      </sic>
      <corr>
       которая
      </corr>
     </choice>
     <choice>
      <reg>
       мне
      </reg>
      <orig>
       мнѣ
      </orig>
     </choice>

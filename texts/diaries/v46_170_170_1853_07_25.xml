     <choice>
      <reg>
       целый
      </reg>
      <orig>
       цѣлый
      </orig>
     </choice>
     день; но
     <choice>
      <reg>
       переиизал
      </reg>
      <orig>
       переиизалъ
      </orig>
     </choice>
     только 1
     <hi rend="superscript">

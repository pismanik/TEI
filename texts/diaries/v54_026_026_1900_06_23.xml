      <orig>
       въ
      </orig>
     </choice>
     <choice>
      <reg>
       данных
      </reg>
      <orig>
       данныхъ
      </orig>
     </choice>
     <choice>
      <reg>
       пределах
      </reg>
      <orig>
       предѣлахъ
      </orig>
     </choice>
     и во время
     <choice>
      <reg>
       прохождения
      </reg>
      <orig>
       прохожденія
      </orig>
     </choice>
     <choice>
      <reg>
       набираем
      </reg>
      <orig>
       набираемъ
      </orig>
     </choice>
     <choice>
      <reg>
       общение
      </reg>
      <orig>
       общеніе
      </orig>
     </choice>
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>
     другими существами —
     <choice>
      <reg>
       любим
      </reg>
      <orig>
       любимъ
      </orig>
     </choice>
     <choice>
      <reg>
       их
      </reg>
      <orig>
       ихъ
      </orig>
     </choice>
     ,
     <ref target="#note141">
      141
     </ref>
     <note exclude="true" index="false" resp="volume_editor" xml:id="note141">
      <hi>
       Зачеркнуто:
      </hi>
      <del>
       рас
      </del>
      <del>
       пр
      </del>
     </note>
     расширяя свое я
     <choice>
      <reg>
       в
      </reg>
      <orig>
       въ
      </orig>
     </choice>
     <choice>
      <reg>

     <choice original_editorial_correction="Оч[ень]">
      <sic>
       Оч
      </sic>
      <corr>
       Очень
      </corr>
     </choice>
     <choice original_editorial_correction="б[ыло]">
      <sic>
       б
      </sic>
      <corr>
       было
      </corr>
     </choice>
     тяжело.
     <choice>
      <reg>
       Ездил
      </reg>
      <orig>
       Ѣздилъ
      </orig>
     </choice>
     <choice>
      <reg>
       с
      </reg>
      <orig>
       съ
      </orig>
     </choice>
     ней
     <choice>
      <reg>
       в
      </reg>
      <orig>
       въ
      </orig>
     </choice>
     Овсянниково. Успокоилась. Я
     <choice>
      <reg>
       молчал
      </reg>
      <orig>
       молчалъ
      </orig>
     </choice>
     , но не
     <choice>
      <reg>
       мог
      </reg>
      <orig>
       могъ
      </orig>
     </choice>
     , не
     <choice>
      <reg>
       съумел
      </reg>
      <orig>
       съумѣлъ
      </orig>
     </choice>
     быть
     <choice>
      <reg>
       добр
      </reg>
      <orig>
       добръ
      </orig>
     </choice>
     и
     <choice>
      <reg>
       ласков
      </reg>
      <orig>
       ласковъ
      </orig>
     </choice>
     .
     <choice>
      <reg>
       Вечером
      </reg>
      <orig>
       Вечеромъ
      </orig>
     </choice>
     <choice original_editorial_correction="Голд[енвейзеръ]">

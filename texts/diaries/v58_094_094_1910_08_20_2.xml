     <choice original_editorial_correction="оч[ень]">
      <sic>
       оч
      </sic>
      <corr>
       очень
      </corr>
     </choice>
     <choice>
      <reg>
       ничтожные
      </reg>
      <orig>
       ничтожныя
      </orig>
     </choice>

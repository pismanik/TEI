     <choice>
      <reg>
       впечатление
      </reg>
      <orig>
       впечатлѣніе
      </orig>
     </choice>
     .
     <ref target="#note3">
      3
     </ref>
     <note index="false" resp="volume_editor" xml:id="note3">

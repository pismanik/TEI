    <p id="357b5ec1-9beb-4375-8efd-fe4626518029">
     <pb n="172"/>
     <hi style="npdelimiter">
      Вы
     </hi>
     <choice>
      <reg>
       ведь
      </reg>
      <orig>
       вѣдь
      </orig>
     </choice>

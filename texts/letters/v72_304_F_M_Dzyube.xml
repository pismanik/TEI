     <choice>
      <reg>
       людям
      </reg>
      <orig>
       людямъ
      </orig>
     </choice>
     ,
     <choice>
      <reg>
       страдающим
      </reg>
      <orig>
       страдающимъ
      </orig>
     </choice>
     за
     <choice>
      <reg>
       веру

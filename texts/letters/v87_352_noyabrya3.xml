     <choice>
      <reg>
       из
      </reg>
      <orig>
       изъ
      </orig>
     </choice>
     <choice>
      <reg>
       всех
      </reg>
      <orig>
       всѣхъ
      </orig>
     </choice>
     ,
     <choice original_editorial_correction="к[оторые]">
      <sic>
       к
      </sic>
      <corr>
       <choice>
        <reg>
         которые
        </reg>
        <orig>
         которыя
        </orig>

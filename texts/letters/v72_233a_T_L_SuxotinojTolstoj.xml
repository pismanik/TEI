     </ref>
     <note index="false" resp="volume_editor" xml:id="note7">
      <name placement="note" ref="13886" type="person">
       Михаил Львович Толстой
      </name>
      .
     </note>
     <choice>
      <reg>
       далек
      </reg>
      <orig>
       далекъ
      </orig>
     </choice>
     и не переставая
     <choice>
      <reg>
       чем
      </reg>
      <orig>
       чѣмъ
      </orig>
     </choice>
     то
     <choice>
      <reg>
       пьян
      </reg>
      <orig>
       пьянъ
      </orig>
     </choice>
     .
     <choice>
      <reg>
       Надеюсь
      </reg>
      <orig>
       Надѣюсь
      </orig>
     </choice>
     , что
     <choice>
      <reg>
       придет
      </reg>
      <orig>
       придетъ
      </orig>
     </choice>

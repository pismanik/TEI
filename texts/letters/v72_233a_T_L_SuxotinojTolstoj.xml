     <choice>
      <reg>
       оставляет
      </reg>
      <orig>
       оставляетъ
      </orig>
     </choice>
     <choice>
      <reg>
       следы
      </reg>
      <orig>
       слѣды
      </orig>
     </choice>
     .
     <name placement="note" ref="13815" type="person">

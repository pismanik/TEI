     <choice>
      <reg>
       хороший
      </reg>
      <orig>
       хорошій
      </orig>
     </choice>
     <choice>
      <reg>
       искренний
      </reg>
      <orig>
       искренній
      </orig>
     </choice>
     и
     <choice>
      <reg>

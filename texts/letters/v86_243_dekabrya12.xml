      </reg>
      <orig>
       вамъ
      </orig>
     </choice>
     <choice>
      <reg>
       <name placement="text" ref="2033" type="person">
        Булыгин
       </name>
      </reg>
      <orig>
       <name placement="text" ref="2033" type="person">
        Булыгинъ
       </name>
      </orig>
     </choice>
     <choice original_editorial_correction="Мих[аил]">
      <sic>
       <name placement="text" ref="2033" type="person">
        Мих
       </name>
      </sic>
      <corr>
       <choice>
        <reg>
         <name placement="text" ref="2033" type="person">
          Михаил
         </name>
        </reg>
        <orig>
         <name placement="text" ref="2033" type="person">
          Михаилъ
         </name>
        </orig>
       </choice>
      </corr>
     </choice>
     <choice original_editorial_correction="Васил[ьевич]">
      <sic>
       <name placement="text" ref="2033" type="person">

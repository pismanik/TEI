     </ref>
     <note index="false" resp="volume_editor" xml:id="note9">
      Слугою,
      <name placement="note" ref="610" type="person">
       Сергеем Петровичем Арбузовым
      </name>
      .
     </note>
     перевезу мебель и
     <hi style="opdelimiter">
      <choice>
       <reg>
        приеду
       </reg>
       <orig>
        прiѣду
       </orig>
      </choice>
     </hi>

     <choice>
      <reg>
       Впрочем
      </reg>
      <orig>
       Впрочемъ
      </orig>
     </choice>
     ,
     <choice>
      <reg>
       <name placement="note" ref="11935" type="person">
        Руднев
       </name>
      </reg>
      <orig>
       <name placement="note" ref="11935" type="person">
        Рудневъ
       </name>
      </orig>
     </choice>

        <orig>
         <name placement="text" ref="3186" type="person">
          Катеринѣ
         </name>
        </orig>
       </choice>
      </corr>
     </choice>
     <choice original_editorial_correction="Ив[ановне]">
      <sic>
       <name placement="text" ref="3186" type="person">

     </note>
     <choice>
      <reg>
       получил
      </reg>
      <orig>
       получилъ
      </orig>
     </choice>
     и очень
     <choice>
      <reg>
       рад
      </reg>
      <orig>
       радъ
      </orig>
     </choice>
